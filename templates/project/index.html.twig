{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <table class="table" id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>CodeP</th>
                <th>LibelleP</th>
                <th>SecteurP</th>
                <th>CoutFixe</th>
                <th>CoutVar</th>
                <th>DureeP</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.CodeP }}</td>
                <td>{{ project.LibelleP }}</td>
                <td>{{ project.SecteurP }}</td>
                <td>{{ project.CoutFixe }}</td>
                <td>{{ project.CoutVar }}</td>
                <td>{{ project.DureeP ? project.DureeP|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-warning" role="button">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-success" role="button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}" class="btn btn-primary" role="button">Create new</a>
{% endblock %}

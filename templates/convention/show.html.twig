{% extends 'base.html.twig' %}

{% block title %}Convention{% endblock %}

{% block body %}
    <h1>Convention</h1>

    <table class="table" id="example" class="table table-striped table-bordered" style="width:100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ convention.id }}</td>
            </tr>
            <tr>
                <th>Date_Debut</th>
                <td>{{ convention.DateDebut ? convention.DateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>{{ convention.CodeP.LibelleP }}</td>
            </tr>
            <tr>
                <th>Investisseur</th>
                <td>{{ convention.Mat.NomSociete }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('convention_index') }}" class="btn btn-success" role="button">back to list</a>

    <a href="{{ path('convention_edit', {'id': convention.id}) }}" class="btn btn-primary" role="button">edit</a>

    {{ include('convention/_delete_form.html.twig') }}
{% endblock %}
